<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context=".presentation.CreatePlanetActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/title">
            <TextView
                android:id="@+id/title"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Create Planet"
                android:layout_gravity="center"
                android:layout_marginTop="20sp"
                android:textSize="30sp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20sp"
                android:layout_marginTop="20sp"
                android:text="Size"
                android:textSize="30sp" />

            <RadioGroup
                android:id="@+id/size"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="27sp"
                android:orientation="vertical">

                <RadioButton
                    android:id="@+id/size_small"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Small" />

                <RadioButton
                    android:id="@+id/size_medium"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Medium" />

                <RadioButton
                    android:id="@+id/size_large"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Large" />
            </RadioGroup>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20sp"
                android:gravity="bottom"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20sp"
                    android:text="Colors"
                    android:textSize="30sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10sp"
                    android:gravity="bottom"
                    android:text="(3 max)" />
            </LinearLayout>

            <EditText
                android:id="@+id/color1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="27sp" />

            <EditText
                android:id="@+id/color2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="27sp"
                android:layout_marginTop="10sp" />

            <EditText
                android:id="@+id/color3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="27sp"
                android:layout_marginTop="10sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20sp"
                android:layout_marginTop="20sp"
                android:text="Pattern"
                android:textSize="30sp" />

            <RadioGroup
                android:id="@+id/pattern"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="27sp"
                android:orientation="vertical">

                <RadioButton
                    android:id="@+id/pattern_spiral"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Spiral" />

                <RadioButton
                    android:id="@+id/pattern_dotted"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Dotted" />

                <RadioButton
                    android:id="@+id/pattern_linesH"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Horizontal lines" />

                <RadioButton
                    android:id="@+id/pattern_linesV"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Vertical lines" />
            </RadioGroup>

            <Button
                android:id="@+id/submit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="27sp"
                android:layout_marginTop="10sp"
                android:layout_marginBottom="20sp"
                android:text="Submit" />
        </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>